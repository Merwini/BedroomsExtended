<Defs>
	<nuff.PersonalizedBedrooms.RoomDesireDef Abstract="True" Name="DesireFurnitureComboBase">
		<workerClass>nuff.PersonalizedBedrooms.RoomDesireWorker_Things</workerClass>
	</nuff.PersonalizedBedrooms.RoomDesireDef>

	<nuff.PersonalizedBedrooms.RoomDesireDef ParentName="DesireFurnitureComboBase">
		<defName>npb_tvcombo_tierthree</defName>
		<label>I want my own tv, and a chair to watch it from</label>
		<description>Even a tube tv and a dining chair is fine.</description>
		<desireTier>3</desireTier>
		<thingRequirements>
			<li>
				<satisfyingThings>
					<li>TubeTelevision</li>
					<li>FlatscreenTelevision</li>
					<li>MegascreenTelevision</li>
				</satisfyingThings>
			</li>
			<li>
				<satisfyingThings>
					<li>DiningChair</li>
					<li>Armchair</li>
				</satisfyingThings>
			</li>
		</thingRequirements>
	</nuff.PersonalizedBedrooms.RoomDesireDef>

	<nuff.PersonalizedBedrooms.RoomDesireDef ParentName="DesireFurnitureComboBase">
		<defName>npb_tvcombo_tierfour</defName>
		<label>I want my own flatscreen tv, and an armchair to watch it from</label>
		<description>A flatscreen or megascreen tv, and an armchair.</description>
		<desireTier>4</desireTier>
		<thingRequirements>
			<li>
				<satisfyingThings>
					<li>FlatscreenTelevision</li>
					<li>MegascreenTelevision</li>
				</satisfyingThings>
			</li>
			<li>
				<satisfyingThings>
					<li>Armchair</li>
				</satisfyingThings>
			</li>
		</thingRequirements>
	</nuff.PersonalizedBedrooms.RoomDesireDef>

	<nuff.PersonalizedBedrooms.RoomDesireDef ParentName="DesireFurnitureComboBase">
		<defName>npb_tvcombo_tierfive</defName>
		<label>I want my own megascreen tv, and three armchairs to watch it from</label>
		<description>A megascreen tv, three armchairs.</description>
		<desireTier>5</desireTier>
		<thingRequirements>
			<li>
				<satisfyingThings>
					<li>MegascreenTelevision</li>
				</satisfyingThings>
			</li>
			<li>
				<satisfyingThings>
					<li>Armchair</li>
				</satisfyingThings>
				<quantityNeeded>3</quantityNeeded>
			</li>
		</thingRequirements>
	</nuff.PersonalizedBedrooms.RoomDesireDef>
	
</Defs>