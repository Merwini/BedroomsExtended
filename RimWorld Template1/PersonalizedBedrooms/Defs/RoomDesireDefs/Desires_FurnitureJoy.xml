	<nuff.PersonalizedBedrooms.RoomDesireDef ParentName="DesireFurnitureComboBase">
		<defName>npb_joycombo_tierone</defName>
		<label>I want my own hoopstone ring or horseshoes pin</label>
		<description>A hoopstone ring or horseshoes pin</description>
		<desireTier>1</desireTier>
		<thingRequirements>
			<li>
				<satisfyingThings>
